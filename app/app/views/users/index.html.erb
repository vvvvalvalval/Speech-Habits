<h1>Tous les utilisateurs</h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user %>
	  <% if current_user.admin? %>
	  	| <%= link_to "supprimer", user, :method => :delete, :confirm => "Etes-vous certain ?",
                                :title => "Supprimer #{user.name}" %>
	  <% end %>
    </li>
  <% end %>
</ul>